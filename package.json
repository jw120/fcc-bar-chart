{
  "name": "bar-chart",
  "version": "1.0.0",
  "description": "FreeCodeCamp data visualization exercise - bar chart using d3",
  "repository": {
    "type": "git",
    "url": "http://github.com/jw120/fcc-bar-chart.git"
  },
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/*.js",
    "build:compile": "buble src/ -o build/",
    "build:copy": "cp src/index.html src/bar-chart.css build/",
    "build:lib:d3": "cp node_modules/d3/d3.min.js build/",
    "build:lib:d3-tip": "cp node_modules/d3-tip/index.js build/d3-tip.js",
    "build": "mkdir -p build && npm run build:compile && npm run build:copy && npm run build:lib:d3 && npm run build:lib:d3-tip",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "JW",
  "license": "MIT",
  "dependencies": {
    "d3": "^3.5.17",
    "d3-tip": "^0.6.7"
  },
  "devDependencies": {
    "@types/d3": "0.0.26-alpha",
    "buble": "^0.12.3",
    "eslint": "^3.0.0"
  }
}
