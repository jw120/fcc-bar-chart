{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double", {"avoidEscape": true, "allowTemplateLiterals": true}],
        "semi": ["error", "always"],
        "valid-jsdoc": ["error"],
        "curly": ["error", "all"],
        "default-case": ["error"],
        "eqeqeq": ["error", "smart"],
        "no-else-return": ["error"],
        "no-eq-null": ["error"]
    }
}